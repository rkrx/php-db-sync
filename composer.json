{
    "name": "rkr/db-sync",
    "description": "A sync-tool for mysql-like databases",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "name": "r.kirschler",
        "email": "ron.kirschler@gmail.com"
    }],
    "minimum-stability": "stable",
    "require": {
        "php": ">= 7.4",
        "ext-pdo": "*",
		"ext-json": "*",
        "nette/neon": "^3.2",
        "rkr/php-mysql-query-builder": "^0.3.1"
    },
    "require-dev": {
        "phpstan/phpstan": ">= 0.1",
        "phpunit/phpunit": "^9.5"
	},
    "autoload": {
        "psr-4": {
            "Kir\\DBSync\\": "src/"
        },
        "files": ["src/functions.php"]
    },
    "scripts": {
        "phpstan": "phpstan analyze -c phpstan.neon --memory-limit=2G"
    }
}
